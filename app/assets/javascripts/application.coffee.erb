# The script loads the map and centers it to the user's position. If geolocation fails the map will focus on the center of Odessa
window.initmap = () ->
 showmap = (latl, lngl) ->
        window.map = new google.maps.Map document.getElementById('map'),
        center:
            lat: latl
            lng: lngl
        zoom: 15
 options =
   enableHighAccuracy: true,
   timeout: 5000,
   maximumAge: 0

 succ = (pos) ->
     crd= pos.coords
     showmap crd.latitude, crd.longitude
 er = (ps) ->
    console.log("pos unavialeble")
    showmap 46.4711427, 30.7396057
 if navigator.geolocation
    navigator.geolocation.getCurrentPosition succ,er,options
 else
   showmap 46.4711427, 30.7396057

# Displaying the ratings
window.rate = (r, ro = true) ->

    string = '.'            # To make this usable
    string += r.id if ro    # when both viewing end editing

    # Setting up rating divs
    for i in [1..3]
        $("#{string}mark#{i}").raty
            score: r["mark#{i}"]
            starOn: "<%= asset_path('star-on.png') %>"
            starOff: "<%= asset_path('star-off.png') %>"
            starHalf: "<%= asset_path('star-half.png') %>"
            readOnly: ro
    $("#{string}avgrate").raty
        score: r.mark1 * 0.4 + r.mark2 * 0.3 + r.mark3 * 0.3
        starOn: "<%= asset_path('star-on.png') %>"
        starOff: "<%= asset_path('star-off.png') %>"
        starHalf: "<%= asset_path('star-half.png') %>"
        readOnly: true
    # Saving selected values to inputs if creating/editing a review
    if not ro
        $('.mark1 img').click ->
            $('input[name="review[mark1]"]').val $('.mark1 input').attr 'value'
        $('.mark2 img').click ->
            $('input[name="review[mark2]"]').val $('.mark2 input').attr 'value'
        $('.mark3 img').click ->
            $('input[name="review[mark3]"]').val $('.mark3 input').attr 'value'
