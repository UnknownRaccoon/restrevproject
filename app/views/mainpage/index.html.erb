<!-- Page Content -->
<div class="container">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Restguide <small>Рестораны, кафе, бары...</small></h1>
        </div>
    </div>
    <!-- /.row -->
    <% @restaurants.reverse.each do |rest| %>
        <div class="row">
            <div class="col-md-7">
                <a href="#"><img class="img-responsive" src="http://placehold.it/700x300" alt=""></a>
            </div>
            <div class="col-md-5">
                <h3><%= rest.name %></h3>
                <h4><%= rest.address %></h4>
                <p><%= rest.review.truncate(300) %></p>
                <%= link_to 'Открыть', review_path(rest), :class => "btn btn-primary" %>
                <% if admin_signed_in? %>
                    <%= link_to 'Отредактировать', edit_review_path(rest), :class => "btn btn-primary" %>
                    <%= link_to 'Удалить', review_path(rest), method: :delete, data: {}, :class => "btn btn-primary" %>
                <% end %>
                <!--<span class="glyphicon glyphicon-chevron-right"></span> -->
            </div>
        </div>
        <!-- /.row -->
        <hr>
    <% end %>
