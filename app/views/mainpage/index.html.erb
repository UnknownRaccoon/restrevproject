<!-- CONTENT -->
<div class="content" id="content">
	<div class="c-main container"> <!-- C-MAIN -->
		<div class="row"> 
			<div class="col-md-12">
				<div class="c-title">
					<h2>Выбирай лучшие рестораны</h2>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-7">
				<div id="map"></div>
			</div>
			<div class="sol-sm-5">
				<div class="top-rest">
					<table class="table">
						<% @restaurants.sort { |a,b| b.avgrate <=> a.avgrate }.first(10).each do |rest| %>
							<tr class="clearfix"><td class="rest-name"><a href="#"><%= rest.name %></a></td><td class="rating"><%= rest.avgrate.round(1) %> / 5.0</td><td><span class="<%= rest.id %>avgrate star"></span></td></tr>
						<% end %>
					</table>
				</div>
			</div>
		</div>
		<div class="reviews container"> <!-- REVIEWS -->
			<div class="row">
				<div class="col-md-12">
					<div class="c-title">
						<h2>Каталог заведений:</h2>
					</div>
				</div>
			</div>
			<div class="restaurants"><!-- RESTAURANTS -->
				<% @restaurants.search(params[:search]).reverse.each do |rest| %>
				<div class="restaurant"><!-- RESTAURANT -->
					<div class="row">
						<div class="col-md-4">
							<a href="#"><%= cl_image_tag(rest.photos.first.path, {size: '500x250', crop: :fit, class: "img-responsive"}) if rest.photos.first != nil %></a>
						</div>
						<div class="col-md-4">
							<h3 class="r-name"><%= rest.name %></h3>
							<p><%= rest.review.truncate(300) %></p>
							<%= link_to 'Подробнее', review_path(rest), :class => "btn btn-primary" %>
							<% if admin_signed_in? %>
							<%= link_to 'Редактировать', edit_review_path(rest), :class => "btn btn-success" %>
							<%= link_to 'Удалить', review_path(rest), method: :delete, data: {}, :class => "btn btn-danger" %>
							<% end %>
						</div>
						<div class="col-md-4">
							<div class="adress">
								<h4><%= rest.address %></h4>
							</div>
							<div class="info">
								<table>
									<tr class="clearfix">
										<td>Кухня:</td><td class="star"><span class="<%= rest.id %>mark1"></span></td>
									</tr>
									<tr class="clearfix">
										<td>Интерьер:</td><td class="star"><span class="<%= rest.id %>mark2"></span></td>
									</tr>
									<tr class="clearfix">
										<td>Обслуживание:</td><td class="star"><span class="<%= rest.id %>mark3"></span></td>
									</tr>
									<tr class="clearfix">
										<td>Общая оценка:</td><td class="rating"><span class="<%= rest.id %>avgrate"></span><br /><%= rest.avgrate.round(1) %> из 5.0</td>
									</tr>
								</table>
							</div>
						</div>
					</div>
				</div><!-- END RESTAURANT -->
				<% end %>
			</div><!-- END RESTAURANTS -->
		</div><!-- END REVIEWS -->
	</div><!-- END C-MAIN -->
</div><!-- END CONTENT -->
