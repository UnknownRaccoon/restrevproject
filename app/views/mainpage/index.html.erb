<!-- Header -->
<header>
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Добро пожаловать в RESTguide!</div>
            <div class="intro-heading">Проведи время</div>
            <a href="#content" class="page-scroll btn btn-xl">с удовольствием</a>
        </div>
    </div>
</header>
<!-- Content -->
<div class="container content" id="content">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="page-header">Выбирай лучшие рестораны</h2>
        </div>
    </div>
	<div class="row">
        <div class="col-sm-7">
            <div id="map"></div>
        </div>
        <div class="sol-sm-5 top10">
            <table class="table">
                <% @top10.each do |rest| %>
                    <tr><td><a href="#"><%= rest.name %></a></td><td><span class="<%= rest.id %>avgrate"></span></td><td><%= rest.avgrate.round(1) %> / 5.0</td></tr>
                <% end %>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 c-main">
            <h1 class="">Каталог заведений:</h1>
        </div>
    </div>
    <% @restaurants.each do |rest| %>
        <div class="row">
            <div class="col-sm-5">
                <a href="#"><%= cl_image_tag(rest.photos.first.path, {size: '500x250', crop: :fit, class: "img-responsive"}) if rest.photos.first != nil %></a>
            </div>
            <div class="col-sm-4">
                <h3><%= rest.name %></h3>
                <p><%= rest.review.truncate(300) %></p>
                <%= link_to 'Подробнее', review_path(rest), :class => "btn btn-primary" %>
                <% if admin_signed_in? %>
                    <%= link_to 'Редактировать', edit_review_path(rest), :class => "btn btn-success" %>
                    <%= link_to 'Удалить', review_path(rest), method: :delete, data: {}, :class => "btn btn-danger" %>
                <% end %>
            </div>
            <div class="col-sm-3">
			<h4><%= rest.address %></h4>
                <table>
                    <tr>
                        <td>Кухня:</td><td><span class="<%= rest.id %>mark1"></span></td>
                    </tr>
                    <tr>
                        <td>Интерьер:</td><td><span class="<%= rest.id %>mark2"></span></td>
                    </tr>
                    <tr>
                        <td>Обслуживание:</td><td><span class="<%= rest.id %>mark3"></span></td>
                    </tr>
                    <tr>
                        <td>Общая оценка:</td><td><span class="<%= rest.id %>avgrate"></span><br /><%= rest.avgrate.round(1) %> из 5.0</td>
                    </tr>
                </table>
            </div>
        </div>
        <hr />
    <% end %>
</div>
