<!-- VIDEO -->
	<div class="intro-text">
		<div id="mp-bg"></div>
		<%= video_tag ["header.webm", "header.mp4", "header.ogv"], poster: "res.jpg", loop: 'true', autoplay: 'true', class: 'bgvideo', id: 'bgvideo' %>
		<div class="txt-block">
			<div class="intro-lead-in">Добро пожаловать в RESTguide!</div>
			<div class="intro-heading">Проведи время</div>
			<a href="#content" id="dowm">с удовольствием</a>
		</div>
	</div>
	<!-- END VIDEO -->
<!-- CONTENT -->
<div class="content" id="content">
	 <!-- C-MAIN -->
	<div class="c-main container">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<div class="c-title">
					<h2>Выбирай лучшие рестораны</h2>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-7">
				<div id="map"></div>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-5 top10">
				<div class="top-rest">
					<table class="table">
						<% @top10.each do |rest| %>
							<tr class="clearfix">
								<td class="rest-name"><%=link_to rest.name, review_path(rest) %></td>
								<td><span class="<%= rest.id %>avgrate star"></span></td>
								<td class="rating"><%= rest.avgrate.round(1) %> / 5.0</td>
							</tr>
						<% end %>
					</table>
				</div>
			</div>
		</div>
		<div class="reviews"> <!-- REVIEWS -->
			<div class="row">
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
					<div class="c-title">
						<h2>Каталог заведений:</h2>
					</div>
				</div>
			</div>
			<div class="restaurants"><!-- RESTAURANTS -->
				<% @restaurants.each do |rest| %>
				<div class="restaurant"><!-- RESTAURANT -->
					<div class="row">
						<div class="col-xs-12 col-sm-12 col-md-12 col-lg-4">
							<a href="#">
								<%= cl_image_tag(rest.photos.first.path, {size: '500x250', crop: :fit, class: "img-responsive"}) if rest.photos.first != nil %>
							</a>
						</div>
						<div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
							<h3 class="r-name"><%= rest.name %></h3>
							<p><%= rest.review.truncate(300) %></p>
							<%= link_to 'Подробнее', review_path(rest), :class => "btn btn-primary" %>
							<% if admin_signed_in? %>
							<%= link_to 'Редактировать', edit_review_path(rest), :class => "btn btn-success" %>
							<%= link_to 'Удалить', review_path(rest), method: :delete, data: {}, :class => "btn btn-danger" %>
							<% end %>
						</div>
						<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 col-lg-offset-1">
							<div class="adress">
								<h4><%= rest.address %></h4>
							</div>
							<div class="info">
								<table>
									<tr class="clearfix">
										<td>Кухня:</td><td class="star"><span class="<%= rest.id %>mark1"></span></td>
									</tr>
									<tr class="clearfix">
										<td>Интерьер:</td><td class="star"><span class="<%= rest.id %>mark2"></span></td>
									</tr>
									<tr class="clearfix">
										<td>Обслуживание:</td><td class="star"><span class="<%= rest.id %>mark3"></span></td>
									</tr>
									<tr class="clearfix">
										<td>Общая оценка:</td><td class="rating"><span class="<%= rest.id %>avgrate"></span><br /><%= rest.avgrate.round(1) %> из 5.0</td>
									</tr>
								</table>
							</div>
						</div>
					</div>
				</div><!-- END RESTAURANT -->
				<% end %>
			</div><!-- END RESTAURANTS -->
		</div><!-- END REVIEWS -->
	</div><!-- END C-MAIN -->
</div><!-- END CONTENT -->
